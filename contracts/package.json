{
  "name": "blockreceipt-contracts",
  "version": "1.0.0",
  "description": "BlockReceipt.ai Solidity smart contracts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy-enhanced-receipt.js --network amoy",
    "verify": "hardhat run scripts/verify-contract-polygonscan.js --network amoy",
    "deploy:mumbai": "hardhat run scripts/deploy-enhanced-receipt.js --network mumbai",
    "verify:mumbai": "hardhat run scripts/verify-contract-polygonscan.js --network mumbai",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "size": "hardhat size-contracts",
    "gas": "REPORT_GAS=true hardhat test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "ethers": "^6.10.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.10",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.2",
    "solhint": "^4.0.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.1"
  },
  "keywords": [
    "solidity",
    "hardhat",
    "ethereum",
    "polygon",
    "smart-contracts",
    "nft",
    "erc1155"
  ],
  "author": "BlockReceipt.ai Team",
  "license": "MIT"
} 